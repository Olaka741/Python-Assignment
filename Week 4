def modify_content(content):
    """
    Modify the file content as needed.
    For demo purposes, we'll convert the text to uppercase.
    You can change this logic to anything else.
    """
    return content.upper()


def main():
    # Ask the user for a filename
    filename = input("Enter the filename to read: ")

    try:
        # Try to open and read the file
        with open(filename, "r") as infile:
            content = infile.read()

        # Modify the content
        modified_content = modify_content(content)

        # Write to a new file
        new_filename = "modified_" + filename
        with open(new_filename, "w") as outfile:
            outfile.write(modified_content)

        print(f"Modified file has been saved as: {new_filename}")

    except FileNotFoundError:
        print("Error: The file does not exist.")
    except IOError:
        print("Error: The file could not be read or written.")


if __name__ == "__main__":
    main()
